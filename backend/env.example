# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend URL (must start with http:// or https://)
FRONTEND_URL=http://localhost:8080

# Supabase Configuration
SUPABASE_URL=supabase_url
SUPABASE_SERVICE_ROLE_KEY=supbase_service_role_key

# GitHub API (for backend GitHub actions, demo, and not login)
GITHUB_TOKEN=github_token

# CORS Settings
ALLOWED_ORIGINS=allowed_origins

# GitHub OAuth (for login)
GITHUB_CLIENT_ID=github_client_id
GITHUB_CLIENT_SECRET=github_client_secret
GITHUB_OAUTH_REDIRECT_URI=github_oauth_redirect_uri

# Encryption (for secure token storage)
FERNET_KEY=fernet_key

## --optional--

# OpenAI Configuration (only if using GPT features)
OPENAI_ENABLED=0
OPENAI_API_KEY=openai_api_key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=400


# JWT (for custom JWT logic)
JWT_SECRET=jwt_secret
JWT_EXPIRE_MINUTES=60
ACCESS_TOKEN_EXPIRE_MINUTES=30


# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_DIGEST=10/minute

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_WEEKLY_DIGESTS=false
ENABLE_ON_MERGE_DIGESTS=false

# Stripe Billing (if using paid plans)
STRIPE_SECRET_KEY=stripe_secret_key
STRIPE_WEBHOOK_SECRET=stripe_webhook_secret
STRIPE_PRICE_ID_FREE=stripe_price_id_free
STRIPE_PRICE_ID_PRO=stripe_price_id_pro
STRIPE_PRICE_ID_TEAM=stripe_price_id_team

# Error Reporting (Sentry)
SENTRY_DSN=


